# .env.example
# Example environment variables for the Nifty Scalper Bot.
# Copy this file to .env and fill in your actual values.

# -----------------------------------------------------------------------------
# API Credentials (Required)
# -----------------------------------------------------------------------------
ZERODHA_API_KEY="YOUR_API_KEY"
ZERODHA_API_SECRET="YOUR_API_SECRET"
ZERODHA_ACCESS_TOKEN="YOUR_SHORT_LIVED_ACCESS_TOKEN"

# -----------------------------------------------------------------------------
# Telegram Notifications (Required)
# -----------------------------------------------------------------------------
TELEGRAM_BOT_TOKEN="YOUR_TELEGRAM_BOT_TOKEN"
TELEGRAM_CHAT_ID="YOUR_TELEGRAM_CHAT_ID"

# -----------------------------------------------------------------------------
# Application Mode / Logging
# -----------------------------------------------------------------------------
ENABLE_LIVE_TRADING=true
ENABLE_TELEGRAM=true
ALLOW_OFFHOURS_TESTING=false
LOG_LEVEL=INFO
TZ="Asia/Kolkata"

# -----------------------------------------------------------------------------
# Trading Window (IST, HH:MM)
# -----------------------------------------------------------------------------
TIME_FILTER_START="09:20"
TIME_FILTER_END="15:15"

# -----------------------------------------------------------------------------
# Data / Warmup
# -----------------------------------------------------------------------------
DATA_LOOKBACK_MINUTES=15
MIN_BARS_FOR_SIGNAL=10
# Number of previous working days to pre-load (0 disables)
DATA_HISTORY_DAYS=0
# Optional cap on cached bars
DATA_HISTORY_MAX_CANDLES=0

# -----------------------------------------------------------------------------
# Strategy Tuning
# -----------------------------------------------------------------------------
MIN_SIGNAL_SCORE=5.0
CONFIDENCE_THRESHOLD=6.0
ATR_PERIOD=14
ATR_SL_MULTIPLIER=1.5
ATR_TP_MULTIPLIER=3.0

# Underlying & strikes
SPOT_SYMBOL="NSE:NIFTY 50"
STRIKE_SELECTION_RANGE=3

# -----------------------------------------------------------------------------
# Risk Management
# -----------------------------------------------------------------------------
MAX_DAILY_DRAWDOWN_PCT=0.03
MAX_TRADES_PER_DAY=15
CONSECUTIVE_LOSS_LIMIT=3
RISK_PER_TRADE_PCT=0.01
MIN_LOTS=1
MAX_LOTS=10

# -----------------------------------------------------------------------------
# Execution (optional)
# -----------------------------------------------------------------------------
TRADE_SYMBOL="NIFTY"
TRADE_EXCHANGE="NFO"
INSTRUMENT_TOKEN=256265
NFO_FREEZE_QTY=1800
TICK_SIZE=0.05
