# =========================
# Environment Variables for Nifty Scalper Bot
# =========================

# --- Zerodha KiteConnect API ---
ZERODHA_API_KEY=your_api_key_here
ZERODHA_API_SECRET=your_api_secret_here
ZERODHA_ACCESS_TOKEN=your_access_token_here

# --- Telegram Bot ---
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# --- Bot Configuration ---
ENABLE_LIVE_TRADING=false                # true or false
CONFIDENCE_THRESHOLD=8                   # Min confidence score for trades
BASE_STOP_LOSS_POINTS=4
BASE_TARGET_POINTS=8

# --- Logging ---
LOG_LEVEL=INFO

# --- Optional API Integrations ---
# e.g., NewsAPI, FII/DII data sources
NEWS_API_KEY=your_news_api_key_here

# =========================
# Notes:
# - Copy this file to `.env` and fill in your real values
# - `.env` is ignored in .gitignore for safety
# - Keep secrets private (do not commit `.env`)
# =========================
