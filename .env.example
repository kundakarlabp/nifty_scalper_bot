# .env.example
# Example environment variables for the Nifty Scalper Bot.
# Copy this file to .env and fill in your actual values.

# -----------------------------------------------------------------------------
# API Credentials (Required)
# -----------------------------------------------------------------------------
ZERODHA_API_KEY="YOUR_API_KEY"
ZERODHA_API_SECRET="YOUR_API_SECRET"
ZERODHA_ACCESS_TOKEN="YOUR_SHORT_LIVED_ACCESS_TOKEN"

# -----------------------------------------------------------------------------
# Telegram Notifications (Required)
# -----------------------------------------------------------------------------
TELEGRAM_BOT_TOKEN="YOUR_TELEGRAM_BOT_TOKEN"
TELEGRAM_CHAT_ID="YOUR_TELEGRAM_CHAT_ID"

# -----------------------------------------------------------------------------
# Application Mode (IMPORTANT)
# -----------------------------------------------------------------------------
# Master switch for live trading. Set to "true" to enable real order placement.
# Default is "false" (shadow mode).
ENABLE_LIVE_TRADING=false

# Enable/disable Telegram notifications globally.
ENABLE_TELEGRAM=true

# Allow the bot to run outside of standard market hours for testing purposes.
ALLOW_OFFHOURS_TESTING=false

# Set the logging level. Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# Risk Management Parameters
# -----------------------------------------------------------------------------
# Max daily loss as a percentage of starting equity (e.g., 0.03 for 3%).
MAX_DAILY_DRAWDOWN_PCT=0.03

# Maximum number of trades to execute per day.
MAX_TRADES_PER_DAY=15

# Halt trading after this many consecutive losses.
CONSECUTIVE_LOSS_LIMIT=3

# Percentage of equity to risk on a single trade (e.g., 0.01 for 1%).
RISK_PER_TRADE_PCT=0.01

# Minimum and maximum number of lots per trade.
MIN_LOTS=1
MAX_LOTS=10

# -----------------------------------------------------------------------------
# Strategy Tuning Parameters
# -----------------------------------------------------------------------------
# Minimum absolute score from indicators to trigger a signal.
MIN_SIGNAL_SCORE=5.0

# Minimum confidence score (0-10) required to place a trade.
CONFIDENCE_THRESHOLD=6.0

# Trading window in IST (HH:MM).
TIME_FILTER_START="09:20"
TIME_FILTER_END="15:15"

# Period for ATR (Average True Range) calculation.
ATR_PERIOD=14

# Multiplier for ATR to determine stop-loss distance.
ATR_SL_MULTIPLIER=1.5

# Multiplier for ATR to determine take-profit distance.
ATR_TP_MULTIPLIER=3.0

# Symbol for the underlying spot index.
SPOT_SYMBOL="NSE:NIFTY 50"

# Range of strikes (Â± from ATM) to consider for trading.
STRIKE_SELECTION_RANGE=3